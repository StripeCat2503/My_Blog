    <title>Thank you!</title>
</head>
<style>
    h1 {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        font-size: 48px;
    }

    h2 {
        position: absolute;
        left: 50%;
        top: 70%;
        transform: translate(-50%, -50%);
    }
</style>

<body>
    <h1>Thanks for your feedback!</h1>
    <h2>3</h2>

    <script>
        $(document).ready(function () {           
            let counter = 2
            setInterval(function () {
                $('h2').text(counter + 's')
                counter -= 1
                if(counter < 0){
                    window.location.replace('/')
                }
            }, 1000)

        })
    </script>
</body>

